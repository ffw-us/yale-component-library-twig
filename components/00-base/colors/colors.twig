{% set colors__base_class = "cl-colors" %}

{% for group, colorset in _context.colors %}
  <h2>{{ group }}</h2>
  <div {{ bem(colors__base_class) }}>
    <ul {{ bem('list', [], colors__base_class) }} data-theme="">
      {% for color, value in colorset %}
        {% if value is iterable %}
          {% for nested_color, nested_value in value %}
            <li {{ bem("item", [], colors__base_class) }} style="background: var(--color-{{group}}-{{color}}-{{nested_color}});">
              <span {{ bem("title", [], colors__base_class) }}>--color-{{ group }}-{{color}}-{{nested_color}}</span>
              <br/>
            </li>
          {% endfor %}
        {% else %}
          <li {{ bem("item", [], colors__base_class) }} style="background: var(--color-{{group}}-{{color}});">
            <span {{ bem("title", [], colors__base_class) }}>--color-{{ group }}-{{ color }}</span>
            <br/>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
{% endfor %}
