{% set colors__base_class = "cl-colors" %}

<div {{ bem(colors__base_class) }}>
	{# {% include "@atoms/text/headings/_heading.twig" with {
    heading_level: 2,
    heading: colors_heading,
  } %} #}
  <h2 {{ bem('heading', [], colors__base_class) }}>{{ colors__heading }}</h2>
	{% for palette in palettes %}
		{% set palette__machine = palette.palette__heading|lower|replace({' ': '-'}) %}
		{# {% include "@atoms/text/headings/_heading.twig" with {
      heading_level: 3,
      heading: palette.palette__heading,
    } %} #}
    <h3 {{ bem('palette-heading', [], colors__base_class) }}>{{ palette.palette__heading }}</h3>
		<ul {{ bem('list', [palette__machine], colors__base_class) }} data-theme="{{ palette__machine }}">
			{% for color in palette.colors %}
				{% set color__machine = color.name|lower|replace({' ': '-'}) %}
				{% if color.color__reverse == TRUE %}
					{% set colors__title__modifiers = ['reverse'] %}
				{% endif %}
				<li {{ bem("item", [palette__machine ~ '-' ~ color__machine], colors__base_class) }}>
					<span {{ bem("title", colors__title__modifiers, colors__base_class) }}>{{ color.name }}</span>
					<br/>
				</li>
			{% endfor %}
		</ul>
	{% endfor %}
</div>
