{#
 # Available props:
 # - link__style: underline (default), no-underline
 # - link__type: 
 #   - normal (default), 
 #   - download
 #   - external (adds icon), 
 #   - target-blank (adds icon + opens in new window/tab),
 #
 # Available variables:
 # - link__content - the content of the link (typically text)
 # - link__url - the url this link should poing to
 # - link__attributes - array of attribute,value pairs
 #
 # Available blocks:
 # - link__content - used to replace the content of the link
 #     Example: to insert the image component
 #}

{% set link__base_class = link__base_class|default('link') %}
{% set link__attributes = link__attributes|default({}) %}

{% set link__attributes = link__attributes|merge({
  'data-link-style': link__style|default('underline'),
  'data-link-type': link__type|default('normal'),
  class: bem(link__base_class, link__modifiers, link__blockname),
  href: link__url,
}) %}

{# if link__type is target-blank add target="_blank" attribute #}
{% if link__type == 'target-blank' %}
  {% set link__attributes = link__attributes|merge({
  'target': '_blank',
  }) %}
{% endif %}

<a {{ add_attributes(link__attributes) }}>
  {% block link__content %}
    {{- link__content -}}
  {% endblock %}

  {# if link__type is external or target-blank we add icons #}
  {% if link__type == 'external' %}
    {% include "@atoms/images/icons/_yds-icon.twig" with {
        icon__name: 'link-external',
        icon__blockname: 'link-external',
        icon__decorative: true,
      } 
    %}
  {% endif %}
  {% if link__type == 'target-blank' %}
    {% include "@atoms/images/icons/_yds-icon.twig" with {
        icon__name: 'link-target-blank',
        icon__blockname: 'link-target-blank',
        icon__decorative: true,
      } 
    %}
  {% endif %}
  {% if link__type == 'download' %}
    {% include "@atoms/images/icons/_yds-icon.twig" with {
        icon__name: 'circle-down',
        icon__blockname: 'circle-down',
        icon__decorative: true,
      } 
    %}
  {% endif %}
</a>
