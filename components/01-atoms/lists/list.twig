{#
 # Available variables:
 # - list__items - the array of list items
 #
 # Available blocks:
 # - list__content
 #}
{% set list__base_class = list__base_class|default('ul') %}

<ul {{ bem(list__base_class, list__modifiers, list__blockname) }}>
  {% block list__content %}
    {% for list__item in list__items %}
      {% include "@atoms/lists/_list-item.twig" with {
        list_item__content: list__item.list_item__content,
        list__base_class: list__item.list__base_class,
        list__modifiers: list__item.list__modifiers,
        list__blockname: list__item.list__blockname,
      } %}
    {% endfor %}
  {% endblock %}
</ul>
