{#
 # Available Props:
 # - banner__content__layout: bottom (default), left, or right
 #
 # Available Blocks:
 # - banner__image
 #}

{% set banner__base_class = 'image-banner' %}
{% set image_banner__content__background = image_banner__content__background|default('one') %}

{% set banner__attributes = {
  'data-component-theme': image_banner__content__background,
  class: bem(banner__base_class),
} %}

{% if banner__width %}
  {% set banner__attributes = banner__attributes|merge({
    'data-banner-width': banner__width,
  }) %}
{% endif %}

<div {{ add_attributes(banner__attributes) }}>
  {% block prefix_suffix %}
  {% endblock %}
  <div {{ bem('content-wrapper', [], banner__base_class) }}>
    {% if image_banner__video == 'true' %}
    <div {{ bem('video', [], banner__base_class) }}>
      {% block banner__video %}
        {% include "@atoms/videos/video-background/yds-video-background.twig" with {
          video_background__content: video_background__content|default('https://ia800301.us.archive.org/17/items/VjmorphVjLoops4/SequinSparkle02.mp4'),
          video_background__button__background_color: image_banner__content__background,
        } %}
      {% endblock %}
    </div>
    {% else %}
      <div {{ bem('image', [], banner__base_class) }}>
        {% block banner__image %}
          {% include "@atoms/images/image/_responsive-image.twig" %}
        {% endblock %}
      </div>
    {% endif %}
  </div>
</div>

