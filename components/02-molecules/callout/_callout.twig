{# Variables are documented in the main `callout.twig` file. #}

{% set callout__base_class = 'callout' %}
{% set callout__link__type = callout__link__type|default('button') %}

{% set callout__attributes = {
  class: bem(callout__base_class),
} %}

<div {{ add_attributes(callout__attributes) }}>
  <div {{ bem('inner', [], callout__base_class) }}>
    <div {{ bem('headings', [], callout__base_class) }}>
      {% include "@atoms/typography/headings/heading.twig" with {
        heading__level: '2',
        heading__blockname: callout__base_class,
        heading: callout__heading,
      } %}
      {% if callout__subheading %}
        {% include "@atoms/typography/headings/heading.twig" with {
          heading__level: '3',
          heading__base_class: "subheading",
          heading__blockname: callout__base_class,
          heading: callout__subheading,
        } %}
      {% endif %}
    </div>
    {% include "@atoms/typography/text/text.twig" with {
      text__blockname: callout__base_class,
      text__content: callout__text,
    } %}
    {% if callout__link__url and callout__link__content %}
      {% if callout__link__type == 'link' %}
        {% include "@atoms/links/link.twig" with {
          link__url: callout__link__url,
          link__content: callout__link__content,
          link__blockname: callout__base_class,
        } %}
      {% else %}
        {% include "@atoms/buttons/button.twig" with {
          button__content: callout__link__content,
          button__href: callout__link__url,
          button__blockname: callout__base_class,
        } %}
      {% endif %}
    {% endif %}
  </div>
</div>
