{#
 # Available Variables:
 # - embed__src
 # - embed__title
 #}

{% set embed__base_class = 'embed' %}

{% set embed__attributes = {
  'data-component-width': 'site',
  'class': bem(embed__base_class),
} %}

{% set embed__attributes = embed__attributes|merge(attributes) %}

<div {{ add_attributes(embed__attributes) }}>
  {% block prefix_suffix %}
  {% endblock %}
  <div {{ bem('inner', [], embed__base_class) }}>
    {% block embed__block %}
      <iframe {{ bem('iframe', [], embed__base_class) }} title="{{ embed__title }}" src="{{ embed__src }}" height="100%" width="100%" loading="lazy">
      </iframe>
    {% endblock %}
  </div>
</div>
