{#
 # Available Variables:
 # - page_title__heading
 # - page_title__meta (optional)
 #}

{% set page_title__base_class = 'page-title' %}

<div {{ bem(page_title__base_class) }}>
  {% include "@atoms/typography/headings/heading.twig" with {
    heading__level: '1',
    heading: page_title__heading,
    heading__blockname: page_title__base_class,
  } %}
  {% if page_title__meta %}
    {% include "@atoms/typography/text/text.twig" with {
      text__content: page_title__meta,
      text__base_class: 'meta',
      text__blockname: page_title__base_class,
    } %}
  {% endif %}
</div>
