{#
 # Available Variables:
 # - icons (array)
 #   - url: url the icon links to
 #   - name: Visually hidden text (for screen readers)
 #   - icon: the actual image
 #}

{% set social_links__baseclass = 'social-links' %}

<div {{ bem(social_links__baseclass) }}>
  {# list <ul> #}
  {# social-links__list #}
  <ul {{ bem('list', [], social_links__baseclass) }}>
    {# For each loop #}
    {% for icon in icons %}
      {# list-items <li> #}
      {# social-links__item #}
      <li {{ bem('item', [], social_links__baseclass) }}>
        {# link <a> #}
        <a href="{{ icon.url }}" {{ bem('link', [], social_links__baseclass) }}>
          {# Visually hidden service name (Facebook) #}
          <span class="visually-hidden">{{ icon.name }}</span>
          {# Visually shown icon #}
          {% include '@atoms/images/icons/_icon.twig' with {
            icon__name: icon.icon,
            icon__decorative: true,
            icon__blockname: social_links__baseclass,
          } %}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
