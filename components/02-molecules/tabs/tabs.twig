{#
 # Available Variables:
 # - tabs: array of tab items, which include:
 #   - label
 #   - content
 #}

{% set tabs__base_class = 'tabs' %}

<div id="tabs" {{ bem(tabs__base_class, [], tabs__blockname, ['no-js']) }}>
  <ul {{ bem('nav', [], tabs__base_class) }}>
    {% for key, tab in tabs %}
      {% include "@molecules/tabs/_tab.twig" with {
        tab__link: "#tab-" ~ key,
        tab__label: tab.tab__label,
      } %}
    {% endfor %}
  </ul>
  {% for key, tab in tabs %}
    <div class="tabs__container{% if key == 0 %} is-active{% endif %}">
      <div id="tab-{{ key }}" class="tabs__content">
        <p>{{ tab.tab__content }}</p>
      </div>
    </div>
  {% endfor %}
</div>
