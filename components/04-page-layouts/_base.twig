<div {{ bem('layout-container') }}>
  {# Page Header #}
  {% block page__header %}
    {% include "@page-layouts/placeholder/placeholder.twig" with {
      placeholder: 'Header',
    } %}
  {% endblock %}
  {# System #}
  {% block page_system %}{% endblock %}
  {# Skip link that points to this id is in html.html.twig #}
  <div {{ bem('main') }} id="main-content">
    <main {{ bem('main-content') }}>
      {# Main Content #}
      {% block page_content %}
        {% include "@page-layouts/placeholder/placeholder.twig" with {
          placeholder: 'Main Content',
        } %}
      {% endblock %}
    </main>
  </div>
  {# Page Footer #}
  {% block page__foter %}
    {% include "@page-layouts/placeholder/placeholder.twig" with {
      placeholder: 'Footer',
    } %}
  {% endblock %}
</div>
