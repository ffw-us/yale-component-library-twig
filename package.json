{
  "name": "@yalesites-org/component-library-twig",
  "version": "0.0.0-development",
  "description": "YaleSites Twig component library.",
  "prettier": "@yalesites-org/linting-and-formatting/prettier.config",
  "scripts": {
    "husky:commit-msg": "commitlint --edit $1",
    "husky:pre-commit": "lint-staged",
    "lint:styles": "stylelint 'components/**/*.scss'",
    "prepare": "husky install",
    "prettier": "prettier components --ignore-unknown",
    "semantic-release": "semantic-release",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@semantic-release/github": "^8.0.2",
    "@storybook/addon-a11y": "^6.4.9",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/html": "^6.4.9",
    "@yalesites-org/linting-and-formatting": "^1.0.0",
    "babel-loader": "^8.2.3",
    "husky": "^7.0.4",
    "js-yaml-loader": "^1.2.2",
    "lint-staged": "^12.1.6",
    "node-sass-glob-importer": "^5.3.2",
    "sass": "^1.47.0",
    "sass-loader": "^10.2.0",
    "semantic-release": "^18.0.1",
    "style-loader": "^2.0.0",
    "twig-loader": "https://github.com/fourkitchens/twig-loader",
    "webpack": "^4.46.0"
  },
  "dependencies": {
    "add-attributes-twig-extension": "^0.1.0",
    "bem-twig-extension": "^0.1.1"
  },
  "lint-staged": {
    "components/**/*.scss": [
      "npm run lint:styles -- --fix"
    ],
    "components/**/*.{js,scss,php}": [
      "npm run prettier -- --write"
    ]
  }
}
