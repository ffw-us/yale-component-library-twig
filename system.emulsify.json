{
  "name": "component-library-twig",
  "homepage": "https://github.com/yalesites-org/component-library-twig",
  "repository": "https://github.com/yalesites-org/component-library-twig.git",
  "structure": [
    {
      "name": "tokens",
      "description": "Base-level styling that applies to the overall design and affects all components"
    },
    {
      "name": "atoms",
      "description": "Small components commonly used in higher-level components and rarely used independently"
    },
    {
      "name": "molecules",
      "description": "Medium-sized components used as building blocks for a site"
    },
    {
      "name": "organisms",
      "description": "Large components that compose smaller components into a cohesive UI"
    },
    {
      "name": "templates",
      "description": "Page layout templates"
    },
    {
      "name": "pages",
      "description": "Example pages built using components"
    }
  ],
  "variants": [
    {
      "platform": "drupal",
      "structureImplementations": [
        {
          "name": "tokens",
          "directory": "./components/00-tokens"
        },
        {
          "name": "atoms",
          "directory": "./components/01-atoms"
        },
        {
          "name": "molecules",
          "directory": "./components/02-molecules"
        },
        {
          "name": "organisms",
          "directory": "./components/03-organisms"
        },
        {
          "name": "templates",
          "directory": "./components/04-templates"
        },
        {
          "name": "pages",
          "directory": "./components/05-pages"
        }
      ],
      "files": [
        {
          "name": "style",
          "path": "./components/style.scss",
          "destinationPath": "./components/style.scss",
          "description": "Primary style scss file"
        }
      ],
      "directories": [
        {
          "name": "settings",
          "path": "./components/_settings",
          "destinationPath": "./components/_settings",
          "description": "CSS files that define the theme settings"
        },
        {
          "name": "tokens",
          "path": "./components/00-tokens",
          "destinationPath": "./components/00-tokens",
          "description": "Contains scss files with global defaults"
        },
        {
          "name": "page-layouts",
          "path": "./components/04-page-layouts",
          "destinationPath": "./components/04-page-layouts",
          "description": "General page layouts"
        }
      ],
      "components": [
        {
          "name": "buttons",
          "structure": "atoms",
          "required": true
        },
        {
          "name": "divider",
          "structure": "atoms"
        },
        {
          "name": "images",
          "structure": "atoms",
          "required": true
        },
        {
          "name": "links",
          "structure": "atoms",
          "required": true
        },
        {
          "name": "lists",
          "structure": "atoms",
          "required": true
        },
        {
          "name": "typography",
          "structure": "atoms",
          "required": true
        },
        {
          "name": "accordion",
          "structure": "molecules"
        },
        {
          "name": "alert",
          "structure": "molecules"
        },
        {
          "name": "banner",
          "structure": "molecules"
        },
        {
          "name": "banner/cta",
          "structure": "molecules"
        },
        {
          "name": "callout",
          "structure": "molecules"
        },
        {
          "name": "cards/news-card",
          "structure": "molecules"
        },
        {
          "name": "image",
          "structure": "molecules"
        },
        {
          "name": "menu",
          "structure": "molecules",
          "required": true
        },
        {
          "name": "page-title",
          "structure": "molecules",
          "required": true
        },
        {
          "name": "pop-out-image",
          "structure": "molecules"
        },
        {
          "name": "pull-quote",
          "structure": "molecules"
        },
        {
          "name": "text",
          "structure": "molecules",
          "required": true
        },
        {
          "name": "text-with-image",
          "structure": "molecules"
        },
        {
          "name": "card-collection",
          "structure": "organisms"
        },
        {
          "name": "menu/breadcrumbs",
          "structure": "organisms"
        },
        {
          "name": "menu/primary-nav",
          "structure": "organisms",
          "required": true
        },
        {
          "name": "menu/utility-nav",
          "structure": "organisms"
        },
        {
          "name": "site-footer",
          "structure": "organisms",
          "required": true
        },
        {
          "name": "site-header",
          "structure": "organisms",
          "required": true
        }
      ]
    }
  ]
}
